<Window x:Class="KursDb.View.CountDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KursDb.View"
        mc:Ignorable="d"
        Height="170" Width="170" 
        ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen"
        x:Name="wind">
    <Grid>
        <Label VerticalAlignment="Top" Content="Кол-во" Margin="10 0 0 0"/>
        <TextBox Text="{Binding ElementName=wind, Path=Count}" Width="130" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0 30 0 0"/>
        <Button Width="130" Content="Добавить" VerticalAlignment="Bottom" Margin="10" Click="Button_Click"/>
    </Grid>
</Window>
